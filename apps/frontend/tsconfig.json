{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./*"
            ],
            "@/components/*": [
                "./components/*"
            ],
            "@workspace/shared/types/*": [
                "../../packages/shared/src/types/*"
            ],
            "@workspace/shared/lib/*": [
                "../../packages/shared/src/lib/*"
            ],
            "@workspace/shared/config/*": [
                "../../packages/shared/src/config/*"
            ],
            "@workspace/ui/lib/*": [
                "../../packages/ui/src/lib/*"
            ],
            "@workspace/ui/components/*": [
                "../../packages/ui/src/components/*"
            ],
            "@workspace/ui/hooks/*": [
                "../../packages/ui/src/hooks/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "**/*.mts"
    ],
    "exclude": [
        "node_modules"
    ]
}
