{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "Node", // Use Node for proper .js extension resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false, // Ensure this is false
    "paths": {
      "@workspace/shared/*": ["../../packages/shared/src/*"],
      "@workspace/services/*": ["../../backend/services/src/*"],
      "@workspace/pipeline/*": ["../../backend/pipeline/src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
