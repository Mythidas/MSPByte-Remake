{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@workspace/shared/*": ["../../packages/shared/src/*"],
      "@workspace/services/*": ["../../backend/services/src/*"],
      "@workspace/database/*": ["../../packages/database/*"]
